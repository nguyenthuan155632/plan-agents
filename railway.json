{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/",
    "healthcheckTimeout": 100
  }
}

// NOTE: After deploying, add a Volume in Railway Dashboard:
// 1. Go to your service → Settings → Volumes
// 2. Add Volume: Mount Path = /app/storage
// 3. This will persist your SQLite database across deployments